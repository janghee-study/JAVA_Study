import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int cnt=0;
		int evencnt = 0;
		
		while(a!=0) {
			if(a%2==0) {
				cnt=cnt+a;
			}
			a--;
			evencnt = cnt;
		}
		System.out.println(cnt);
	}
}
