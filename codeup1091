import java.util.Scanner;
import java.util.StringTokenizer;
public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        long a = sc.nextLong();
        int m = sc.nextInt();
        int d = sc.nextInt();
        int n = sc.nextInt();
        
        int sum=0,i=1;
        while(i!=n){
        a=a*m+d;
        i++;
        }
        System.out.println(a);
    }
}
